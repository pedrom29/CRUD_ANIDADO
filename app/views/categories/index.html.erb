<div class="card">


<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name  %></td>
        <td><%= category %></td>
        <td class="btn bg-danger"><%= link_to 'Show', category %></td>
        <td class="btn bg-danger"><%= link_to 'Edit', edit_category_path(category) %></td>
        <td class="btn bg-warning"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
</div>
